<launch>

  <arg name="mask_pgm" default="$(find vislam)/mask.pgm" />
  <arg name="offset_x" default="0.0" />
  <arg name="offset_y" default="0.0" />
  <arg name="offset_z" default="0.0" />
  
  <node pkg="vislam" type="snap_vislam_node" name="snap_vislam_node" output="screen">
    <param name="mask_pgm" value="$(arg mask_pgm)" />

    <!-- Set Vislam's offsets w.r.t. drone's COM -->
    <param name="offset_x" value="$(arg offset_x)"/>
    <param name="offset_y" value="$(arg offset_y)"/>
    <param name="offset_z" value="$(arg offset_z)"/>

    <!-- remap from="vislam/pose" to="mavros/vision_pose/pose"/ -->
  </node>

</launch>
